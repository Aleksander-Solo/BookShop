@model CommentViewModel

<div class="row" style="margin-bottom: 10px;">
    <div class="col-sm-12">
        <h4 style="font-weight: 600;">Komentarze:</h4>
        <hr />
        <button class="btn btn-primary" type="button" data-toggle="modal" data-target="#myModal">Dodaj komentaż <i class="icon-chat"></i></button>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="myModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="AddComment">
                <div class="modal-header">
                    <h5 class="modal-title">Dodaj komentarz <i class="icon-chat"></i></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Title"></label><br />
                        <input asp-for="Title" />
                        <input asp-for="BookId" style="display: none;"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Content"></label><br />
                        <textarea asp-for="Content" style="width: 70%;"></textarea>
                    </div>
                    <div class="form-group">
                        <label asp-for="Stars"></label>(0-10)<br />
                        <input asp-for="Stars" type="number" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Dodaj <i class="icon-ok"></i></button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Wróć <i class="icon-cancel"></i></button>
                </div>
            </form>
        </div>
    </div>
</div>