@model PublishingHauseViewModel

<div class="row">
    <div class="col-sm-12">
        <h2>Dodaj wydawnicto</h2>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-sm-5">
        <form asp-action="AddPubHause" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Adress"></label>
                <input asp-for="Adress" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Logo"></label><i class="icon-picture"></i>
                <input asp-for="Logo" type="file" class="form-control-file" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn bg-success">Dodaj <i class="icon-ok"></i></button>
                <a asp-action="Manage" asp-controller="Book" class="btn btn-outline-info">Wróć <i class="icon-cancel"></i></a>
            </div>
        </form>
    </div>
</div>
